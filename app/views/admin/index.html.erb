<div class="container">

  <%= link_to 'Add New User', new_admin_path %>

  <p id="notice"><%= notice %></p>

  
  <div class="table-responsive">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Activated</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= user.activated %></td>
            <td><%= link_to 'Show', :action => :show, :id => user.id %></td>
            <td><%= link_to 'Edit', edit_admin_path(user) %></td>
            <td><%= link_to 'Destroy',"/admin/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

  

</div>